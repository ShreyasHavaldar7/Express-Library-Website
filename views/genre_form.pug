extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.form-group 
            label(for='name') Genre:
            input#name.form-control(type='text', placeholder = 'Mystery, Classics etc.' name = 'name' value = (undefined===genre? '':genre.name))
        button.btn.btn-primary(type='submit') Create

    if errors
        ul
            for errors in errors
                li!= error.msg